#!/usr/bin/php

<?php

$context = stream_context_create(
	[
		'ssl'  => [
			'verify_peer'      => false,
			'verify_peer_name' => false,
		],
		'http' => [
			'user_agent' => 'Syntatis (wp-plugin-readme-parser)',
		],
	]
);

$content_parser = file_get_contents(
    'https://meta.trac.wordpress.org/browser/sites/trunk/wordpress.org/public_html/wp-content/plugins/plugin-directory/readme/class-parser.php?format=txt',
    false,
    $context
);
$content_parser = str_replace(
	'namespace WordPressdotorg\Plugin_Directory\Readme',
	'namespace Syntatis\WP\PluginReadMeParser\Parser',
	$content_parser
);

if ( ! $content_parser ) {
    echo "Failed to fetch 'class-parser.php' from WordPress.org\n";
	exit( 1 );
}

if ( ! file_put_contents( dirname( __DIR__ ) . '/app/Parser.php', $content_parser ) ) {
	echo "Failed to update '/app/Parser.php'\n";
    exit( 1 );
} else {
	echo "Updated '/app/Parser.php'\n";
}
